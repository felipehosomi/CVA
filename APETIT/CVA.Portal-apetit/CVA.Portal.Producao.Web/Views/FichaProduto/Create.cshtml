@model CVA.Portal.Producao.Model.Qualidade.FichaProdutoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="x_panel">
        <div class="x_content">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_title">
                        <h2>Ficha X Produto</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />
                        <div class="form-group">
                            <label class="col-md-3 control-label">Etapa*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.DropDownList("CodEtapa", null, "", htmlAttributes: new { required = "required", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tipo*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.DropDownList("Tipo", null, "", htmlAttributes: new { id = "ddlTipo", required = "required", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div id="divItem" class="form-group" style="display: none">
                            <label class="col-md-3 control-label">Item*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.DropDownList("CodItem", null, "", htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div id="divGrupo" class="form-group" style="display: none">
                            <label class="col-md-3 control-label">Grupo Item*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.DropDownList("CodGrupo", null, "", htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ficha*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.DropDownList("CodModelo", null, "", htmlAttributes: new { required = "required", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Obrigatório</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.CheckBoxFor(m => m.Obrigatorio)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ativo</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    @Html.CheckBoxFor(m => m.Ativo)
                                </div>
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary pull-right">Salvar <span class="fa fa-floppy-o fa-right"></span></button>
                            <a href='@Url.Action("Index")' data-toggle="tooltip" title="Voltar" class="btn btn-primary pull-right">
                                <span class="fa fa-arrow-left"></span> Voltar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script src="~/Scripts/Views/FichaProduto/create.js"></script>
}