@model List<CVA.Portal.Producao.Model.Qualidade.TipoEspecificacaoModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="x_panel">
            <a href="@Url.Action("Create", "TipoEspecificacao")">
                <button type="button" class="btn btn-success pull-right">Novo <span class="fa fa-floppy-o fa-right"></span></button>
            </a>
            <div class="x_title">
                <h2>Tipo Especificação</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descrição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr id="tr-@Model[i].Code">
                                <td>@Model[i].Code</td>
                                <td>@Model[i].Descricao</td>
                                <td style="text-align: center">
                                    <a href='@Url.Action("Edit", new { id = Model[i].Code})' class="btn btn-default btn-small no-margin" data-toggle="tooltip" title="Editar">
                                        <span class="fa fa-pencil"></span>
                                    </a>
                                    <button type="button" class="btn btn-default btn-small no-margin" data-toggle="modal" data-target="#modal-delete-@Model[i].Code">
                                        <span class="fa fa-trash"></span>
                                    </button>
                                    <div id="modal-delete-@Model[i].Code" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
                                        <div class="modal-dialog modal-sm">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                    <h4 class="modal-title">Remover</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Tem certeza que deseja este registro?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-primary" onclick="remover('TipoEspecificacao', '@Model[i].Code')">Sim</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>