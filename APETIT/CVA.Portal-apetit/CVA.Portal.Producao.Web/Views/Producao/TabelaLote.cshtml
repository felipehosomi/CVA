@model CVA.Portal.Producao.Model.Producao.EstruturaProducaoModel
<table id="tblLoteSerie" class="table table-striped table-bordered table-fixed" style="margin-top: 10px;">
    <thead>
        <tr>
            <th>Lote</th>
            <th>Disponível</th>
            <th>Selecionado</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.LoteSerie.Count; i++)
            {
            <tr>
                <td>
                    @Html.HiddenFor(m => Model.LoteSerie[i].Lote)
                    @Html.HiddenFor(m => Model.LoteSerie[i].QtdeDisponivel)
                    @Model.LoteSerie[i].Lote
                </td>
                <td>
                    @Model.LoteSerie[i].QtdeDisponivel
                </td>
                <td>
                    @Html.TextBoxFor(m => m.LoteSerie[i].Quantidade, htmlAttributes: new { type = "number", min = "0", step = Model.DecimalPlacesUI, onblur = "loteCalcular()", onchange = "loteCalcular()" })
                </td>
            </tr>
        }
    </tbody>
</table>

