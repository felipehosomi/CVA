@model CVA.Portal.Producao.Model.Estoque.TransferenciaEstoqueModel

@{
    Layout = null;
}

@using CVA.Portal.Producao.Model.Producao;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Portal de Produção</title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/animate.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Content/custom.min.css" rel="stylesheet">

    <link href="~/Content/custom.css" rel="stylesheet">

    <script src="~/Scripts/jquery-2.2.4.min.js"></script>

</head>
<body class="login">
    <div class="login_wrapper" style="max-width: 1280px;margin-top: 25px">
        <div class="animate form login_form">
            <section class="login_content">
                <img style="margin-bottom: 50px" src="~/Content/Images/logo.png" />
                <div class="form-group">
                    <div class="form-group">
                        <label class="control-label">Nº da solicitação de transferência:</label>
                        <span>@Model.DocNum</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Data da solicitação:</label>
                        <span>@Model.DocDate.Value.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Status:</label>
                        <span>@Model.Status</span>
                    </div>
                </div>
                @if (Model != null && Model.StockTransferLines.Count > 0)
                {
                    <div>
                        <label>Itens da solicitação de transferência:</label>
                        <table class="table table-responsive table-striped table-bordered">
                            <tr>
                                <th>Código do item</th>
                                <th>Descrição</th>
                                <th>Quantidade solicitada</th>
                                <th>Quantidade atendida</th>
                                <th>Quantidade em aberto</th>
                            </tr>
                            @for (int i = 0; i < Model.StockTransferLines.Count; i++)
                            {
                                <tr>
                                    <td>@Model.StockTransferLines[i].ItemCode</td>
                                    <td>@Model.StockTransferLines[i].Dscription</td>
                                    <td>@Model.StockTransferLines[i].Quantity</td>
                                    <td>@Model.StockTransferLines[i].QuantityMet</td>
                                    <td>@Model.StockTransferLines[i].OpenCreQty</td>
                                </tr>
                            }
                        </table>
                    </div>
                }
                <div class="form-group">
                    <label class="control-label">Observações:</label><br />
                    <span style="white-space: pre-line">@Model.U_CVA_ObsPortal</span>
                </div>
                <img style="margin-top: 100px" src="~/Content/Images/cva_logo.png" />
            </section>
        </div>
    </div>
</body>
</html>
