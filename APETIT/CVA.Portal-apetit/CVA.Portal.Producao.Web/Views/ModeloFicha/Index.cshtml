@model List<CVA.Portal.Producao.Model.Qualidade.ModeloFichaModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="x_panel">
            <a href="@Url.Action("Create")">
                <button type="button" class="btn btn-success pull-right">Novo <span class="fa fa-floppy-o fa-right"></span></button>
            </a>
            <div class="x_title">
                <h2>Modelo de Ficha</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descrição</th>
                            <th>Nr. Revisão</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].Code</td>
                                <td>@Model[i].Descricao</td>
                                <td>@Model[i].NrRevisao</td>
                                <td>@Model[i].StatusDesc</td>
                                <td style="text-align: center">
                                    <a href='@Url.Action("Edit", new { id = Model[i].Code})' class="btn btn-default btn-small no-margin" data-toggle="tooltip" title="Editar">
                                        <span class="fa fa-pencil"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>