<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"> Apontar<strong> Despesas</strong></h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" id="form-project">
                            <label class="col-md-3 control-label">Projeto*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-globe"></span></span>
                                    <input type="text" hidden="hidden" ng-model="expense.Id" />
                                    <select class="form-control" ng-disabled="expense.Id != null" ng-change="ProjectSelected()" ng-model="expense.Projeto.Id" ng-options="selected.Id as selected.Codigo + ' - ' + selected.Tag + ' ' + selected.Nome for selected in ProjectList" tabindex="1">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Informe o Projeto</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Data*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                    <input type="date" class="form-control" ng-model="expense.Data" tabindex="2">
                                </div>
                                <span class="help-block">Informe a data da despesa</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tipo de despesa*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-check"></span></span>
                                    <select class="form-control" ng-change="TipoAlterado()" ng-model="expense.TipoDespesa.Id" ng-options="selected.Expense.Id as selected.Expense.Name for selected in ExpenseTypeList" tabindex="3">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Informe o tipo de despesa</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Descrição*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <textarea class="form-control" rows="4" ng-model="expense.Descricao" tabindex="4"></textarea>
                                </div>
                                <span class="help-block">Informe o descritivo da despesa</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" id="valor-reembolso">
                            <label class="col-md-3 control-label">Valor para reembolso*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-money"></span></span>
                                    <input type="text" class="form-control" ng-blur="CalculaTotal()" ng-model="expense.ValorDespesa" tabindex="5">
                                </div>
                                <span class="help-block">Informe o valor a ser reembolsado</span>
                            </div>
                        </div>
                        <div class="form-group" id="quilometragem" hidden="hidden">
                            <label class="col-md-3 control-label">Quilometragem rodada*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-money"></span></span>
                                    <input type="text" class="form-control" ng-blur="CalculaKm()" ng-model="expense.Quilometragem" tabindex="5">
                                </div>
                                <span class="help-block">Informe a quantidade de quilometros utilizado</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Nº NF*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <input type="text" class="form-control" ng-model="expense.NumNota" tabindex="6" />
                                </div>
                                <span class="help-block">Informe o número da NF</span>
                            </div>
                        </div>
                        <div class="form-group" id="valor-nf">
                            <label class="col-md-3 control-label">Valor da NF*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-money"></span></span>
                                    <input type="text" class="form-control" ng-model="expense.ValorNota" tabindex="7" />
                                </div>
                                <span class="help-block">Informe o valor total da nota fiscal</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Anexo</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-send"></span></span>
                                    <input type="file" accept=".jpg,.jpeg,.png,.bmp,.pdf" class="form-control" id="inputfile" onchange="angular.element(this).scope().UploadFile(this.files)" tabindex="8" />
                                </div>
                                <div style="display: flex" ng-hide="expense.File == '' || expense.File == null">
                                    <input type="text" ng-hide="expense.File == '' || expense.File == null" class="form-control" ng-model="expense.File" readonly="readonly" />
                                    <button type="button" ng-hide="expense.File == '' || expense.File == null" class="btn btn-default pull-left" ng-click="GetAttachedFile()"><span class="fa fa-download fa-right"></span></button>
                                </div>
                                <span class="help-block">Insira o anexo disponível</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Valor a receber</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-money"></span></span>
                                    <input id="inputExpenseTotal" type="text" class="form-control" ng-model="expense.ValorReembolso" readonly="readonly" />
                                </div>
                                <span class="help-block">Valor previsto de reembolso</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="button" class="btn btn-primary pull-right" ng-disabled="IsProcessing" ng-click="Salvar()">Salvar Despesa <span class="fa fa-floppy-o fa-right"></span></button>
        </div>
    </div>
</div>
<script src="~/Scripts/plugins/jQuery/jquery-1.12.3.min.js"></script>
<script src="~/Scripts/plugins/datatables/jquery.dataTables.js"></script>
<script>
    $('#DataTables_Table_1').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.11/i18n/Portuguese-Brasil.json"
        }
    });
</script>