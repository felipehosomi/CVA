@model MODEL.Classes.CollaboratorModel[]
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Loading")
<ul class="breadcrumb">
    <li><a href="/Portal/Index">Home</a></li>
    <li><a href="#">Cadastros</a></li>
    <li><a href="#">Colaborador</a></li>
    <li class="active">Pesquisar</li>
</ul>
<div class="page-title">
    <h2>Colaboradores</h2>
</div>
<div class="page-content-wrap" ng-controller="CollaboratorMainController" ng-init="OnLoad()">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading ui-draggable-handle">
                    <h3 class="panel-title">Registros </h3>
                    <ul class="panel-controls">
                        <li>
                            <button ng-click="New()" type="button" class="btn btn-success pull-right">Novo Colaborador <span class="fa fa-floppy-o fa-right"></span></button>
                        </li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Nome</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <input type="text" class="form-control" ng-model="Nome" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label">CPF</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <input type="text" class="form-control" ng-model="CPF" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label">CNPJ</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <input type="text" class="form-control" ng-model="CNPJ" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label">Status</label>
                                <div class="input-group">
                                    <p id="loading02" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-paste"></span></span>
                                    <select class="form-control" ng-model="Status" ng-options="selected.Id as selected.Descricao for selected in StatusList" required>
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label"> </label>
                                <div class="input-group">
                                    <button ng-click="Search()" type="button" class="btn btn-info pull-right">Pesquisar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td hidden="hidden"></td>
                                    <td><b>Nome</b></td>
                                    <td><b>CPF</b></td>
                                    <td><b>CNPJ</b></td>
                                    <td><b>Email</b></td>
                                    <td><b>Status</b></td>
                                    <td><b>#</b></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in Colaboradores">
                                    <td hidden>{{item.Id}}</td>
                                    <td>{{item.Nome}}</td>
                                    <td>{{item.CPF}}</td>
                                    <td>{{item.CNPJ}}</td>
                                    <td>{{item.Email}}</td>
                                    <td>{{item.Status.Descricao}}</td>
                                    <td>
                                        <button type="button" class="btn btn-default" ng-click="Edit(item.Id)"><span class="fa fa-edit"></span></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <section class="js-export-button-container">
                            <h3>Exportar:</h3>
                            <button class="btn btn-info" ng-click="ExportarExcel()"><i class="fa fa-table"></i>Excel</button>
                            <button class="btn btn-info" ng-click="ExportarPDF()"><i class="fa fa-paste"></i>Pdf</button>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.8/js/jquery.dataTables.min.js"></script>