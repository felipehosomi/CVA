<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Informar<strong> Tipos de Serviço</strong></h3>
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{VisualPercent}}%; float:right">
                    {{VisualPercent}}%
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tipo de Serviço*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading07" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-wrench"></span></span>
                                    <input type="text" hidden="hidden" ng-model="oportunitty.TypeService.Name" />
                                    <select class="form-control" ng-disabled="status == 2" ng-change="TypeServiceSelected()" ng-model="oportunitty.TypeService.Id" ng-options="selected.Id as selected.Name for selected in ServiceTypeList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione Tipo de Serviço</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Descrição</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <input type="text" class="form-control" readonly="readonly" ng-disabled="status == 2" ng-model="oportunitty.TypeService.Description" />
                                </div>
                                <span class="help-block">Descrição do tipo de serviço</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-info" ng-click="AddTypeServiceLine()" ng-disabled="oportunitty.TypeService.Id == null || status == 2"">Adicionar</button>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12 col-xs-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td class="col-md-3">Tipo de Serviço</td>
                                        <td class="col-md-3">Descrição</td>
                                        <td class="col-md-3">#</td>
                                    </tr>
                                </thead>
                                <tbody class="contatos">
                                    <tr ng-repeat="hol in TypeServiceSelectedList">
                                        <td>{{hol.Name}}</td>
                                        <td>{{hol.Description}}</td>
                                        <td>
                                            <button class="btn btn-danger" ng-disabled="status == 2" ng-click="RemoveTypeServiceLine($index)"><i class="fa fa-times"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>