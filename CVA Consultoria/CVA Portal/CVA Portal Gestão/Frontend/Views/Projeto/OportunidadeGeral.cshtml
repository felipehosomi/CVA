@Styles.Render("~/Content/Loading")
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Cadastrar<strong> Oportunidade</strong></h3>
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{VisualPercent}}%; float:right">
                    {{VisualPercent}}%
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Código*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <input type="text" hidden="hidden" ng-model="oportunitty.Id" />
                                    <input type="text" class="form-control" tabindex="1" ng-model="oportunitty.Code" ng-disabled="{{oportunitty.Id != undefined}}" />
                                </div>
                                <span class="help-block">Informe o número da oportunidade</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Filial*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading00" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-globe"></span></span>
                                    <select name="status" class="form-control" ng-model="oportunitty.BranchId" ng-disabled="status == 2" ng-options="selected.Id as selected.Name for selected in BranchList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione a filial responsável</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">CNPJ | Razão Social Cliente</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading03" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <input ng-blur="SearchClient()" type="text" class="form-control" ng-disabled="status == 2" ng-model="oportunitty.Client.Filter" />
                                </div>
                                <span class="help-block">Informe o CNPJ ou a Razão Social</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Temperatura*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-sun-o"></span></span>
                                    <select class="form-control" ng-change="PercentSelected()" ng-disabled="status == 2" ng-model="oportunitty.Percent.Id" ng-options="selected.Id as selected.Percent + '%' for selected in PercentList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione a temperatura da oportunidade</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Descrição Breve*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    <input type="text" class="form-control" ng-disabled="status == 2" ng-model="oportunitty.Identification"/>
                                </div>
                                <span class="help-block">Informe uma breve descrição para a oportunidade</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Status*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading01" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-spinner"></span></span>
                                    <select class="form-control" ng-model="oportunitty.StatusId" ng-options="selected.Id as selected.Status for selected in StatusList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione o status do registro</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Cliente*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading02" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <select class="form-control" ng-change="ClientSelected()" ng-disabled="status == 2" ng-model="oportunitty.Client.Id" ng-options="selected.Id as selected.Name for selected in ClientList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione o cliente</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Data Prevista*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                    <input type="date" class="form-control" ng-disabled="status == 2" ng-model="oportunitty.ExpectedDate" />
                                </div>
                                <span class="help-block">Informe a data prevista para início do projeto</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>