<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Informar<strong> Detalhes</strong></h3>
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{VisualPercent}}%; float:right">
                    {{VisualPercent}}%
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-12 control-label">Data</label>
                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                    <input type="date" class="form-control" ng-disabled="status == 2" ng-model="oportunitty.Observations.Date" />
                                </div>
                                <span class="help-block">Informe a data do acontecimento</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 control-label">Descrição</label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-send"></span></span>
                                    <textarea class="form-control" ng-disabled="status == 2" ng-model="oportunitty.Observations.Observation"></textarea>
                                </div>
                                <span class="help-block">Informe a descrição das atividades</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-info" ng-click="AddDetailsLine()" ng-disabled="oportunitty.Observations.Date == null || oportunitty.Observations.Date == ''">Adicionar</button>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12 col-xs-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td class="col-md-3">Data</td>
                                        <td class="col-md-3">Detalhe</td>
                                        <td class="col-md-3">#</td>
                                    </tr>
                                </thead>
                                <tbody class="contatos">
                                    <tr ng-repeat="hol in ObservationSelectedList">
                                        <td>{{hol.Date | date: "dd/MM/yyyy - HH:mm"}}</td>
                                        <td>{{hol.Observation}}</td>
                                        <td><button type="button" class="btn btn-danger" ng-disabled="status == 2" ng-click="RemoveDetailsLine($index)">X</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>