<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Informar<strong> Contatos</strong></h3>
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{VisualPercent}}%; float:right">
                    {{VisualPercent}}%
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Contato Comercial*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <select class="form-control"ng-disabled="status == 2"  ng-model="oportunitty.Contact.CommercialContact" ng-options="selected.Id as selected.Name for selected in ContactClientList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Informe o nome do contato comercial</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Responsável*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading04" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <select class="form-control" ng-disabled="status == 2" ng-model="oportunitty.Contact.ProjectManager.Id" ng-options="selected.Id as selected.Name for selected in projectManagerList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione o responsável pela oportunidade</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Vendedor*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading05" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <select name="status" class="form-control" ng-disabled="status == 2 || {{oportunitty.Id != undefined}}" ng-model="oportunitty.Contact.Vendor.Id" ng-options="selected.Id as selected.Name for selected in CollaboratorList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione o vendedor responsável</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Técnico*</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <p id="loading06" class="loader" img src="~/Content/Loading.gif"><img src="~/Content/Loading.gif" /></p>
                                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                                    <select name="status" class="form-control" ng-disabled="status == 2" ng-model="oportunitty.Contact.Technical.Id" ng-options="selected.Id as selected.Name for selected in CollaboratorList">
                                        <option value="">Selecione</option>
                                    </select>
                                </div>
                                <span class="help-block">Selecione o técnico responsável</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>