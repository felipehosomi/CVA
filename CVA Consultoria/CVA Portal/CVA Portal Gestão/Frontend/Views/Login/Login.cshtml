@model MODEL.Classes.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="http://www.cvaconsultoria.com.br/images/favicon/favicon.ico" />
    <title>CVA Consultoria - Login</title>
</head>
<body background="./images/pattern2.jpg" style="background-color:cadetblue">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <div id="login-overlay" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="background-color:lightgray;">
                <div class="row">
                    <div  class="col-xs-6 col-md-offset-3">
                        <img src="~/img/logo.png" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-10 col-md-offset-1">
                        <div class="well">
                            @using (Html.BeginForm("EfetuarLogin", "Login", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="email" class="control-label">E-mail</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", @placeholder = "Insira seu e-mail", @title = "Insira seu e-mail" })
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label">Senha</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Insira sua senha", @required = "required", @title = "Insira sua senha" })
                                    <span class="help-block"></span>
                                </div>
                                if(ViewBag.LoginError != null)
                                {
                                    <div id="loginErrorMsg" class="alert alert-error">@ViewBag.LoginError</div>
                                }
                                else
                                {
                                    <div id="loginErrorMsg" class="alert alert-error hide"></div>
                                }
                                <div align="center" class="checkbox">
                                    @Html.ActionLink("Esqueceu sua senha?", "RecuperarSenha", "EmailSender")
                                </div>
                                <button type="submit" value="login" name="submit" class="btn btn-success btn-block">Entrar</button>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div align="center">
        Última atualização: 19/06/2018
    </div>    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</body>
</html>
